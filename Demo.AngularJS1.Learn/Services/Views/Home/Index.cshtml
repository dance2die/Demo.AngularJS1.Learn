@{
	ViewBag.Title = "Index";
}

@section ScriptBody
{
	<script src="~/js/controllers/Home/customDirectives.js"></script>
	<script src="~/js/controllers/Home/defaultCtrl.js"></script>
}

<h2>Index</h2>

<div ng-app="exampleApp">
	<div ng-controller="defaultCtrl">
		<div class="well">
			<div class="btn-group" tri-button counter="data.totalClicks" source="data.cities">
				<button class="btn btn-default" ng-repeat="city in data.cities">
					{{city}}
				</button>
			</div>
			<h5>Total clicks: {{data.totalClicks}}</h5>
		</div>
	</div>
</div>